{
  "compilerOptions": {
    // File Layout
    "jsx": "react-jsx",
   "module": "ES2022",
    "moduleResolution": "node",
    "target": "es2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": [
      "esnext"
    ],
    "types": [
      "node"
    ], // ðŸ‘ˆ explicitly include node types
    // Type Declarations
    "typeRoots": [
      "./node_modules/@types"
    ],
    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    // Recommended Options
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}